@model MvcApplication1.DbModels.Projects
@{
    ViewBag.Title = "Setting";
}


<div class="container" id="main">
    <div class="flash affix-top"></div>

    <!--Setting Button-->
    <div id="breadcrumbs">
        <div>
            <div class="row down60">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="col-md-8" style="padding:0 20px 0 20px">
                    <h1 id="project-title"><a href="/@Model.UserLogin / @Model.Title">/ </a></h1>
                </div>

                <div class="col-md-4 align-right " id="project-nav" style="padding:0 20px 0 20px">
                    <a id="project-settings-link" class="">
                        <i class="glyphicons cogwheel"></i>
                        @Html.ActionLink("AccountSettings", "UserSettings", "Settings")
                    </a>
                </div>
                }
            </div>

        </div>
    </div>

    <div class="row">
        <div class="span12"><h2>Project Settings</h2></div>

        <!--Collaborators-->
        <div class="col-md-8">
            <div id="collaborators">
                <h2>Collaborators</h2>
                <div class="collaborators-list-container">
                    <ul class="collaborators-list list list-gray">
                        <li class="list-item list-padding">
                            <img src="https://secure.gravatar.com/avatar/b5a4cc2539e3d81d9944eaf07e3163eb?s=32" class="collaborator-image"> demo_book

                            <div class="pull-right">

                                <span class="permission-level">Owner</span>


                            </div>
                        </li>
                    </ul>
                </div>
                <div class="down20 box add-collaborator-box">
                    <div class="box-top">
                        <h3>Add New Collaborator</h3>
                    </div>
                    <div class="box-inner">
                        <form class="form-inline" id="add-collaborator-form">
                            <div class="row-fluid">
                                <input class="span12" type="text" placeholder="email@example.com" id="collaborator-name">
                            </div>
                            <fieldset class="down20"></fieldset>
                            <div class=" down20 button-row">
                                <span class="dropdown span4">
                                    <select id="collaborator-role" style="height:100%;" data-placeholder="Choose a role..." name="access_level" style="display: none;">
                                        <option value="30">Collaborator</option>
                                        <option value="40">Owner</option>
                                    </select>

                                </span>
                                <a class="block align-center btn action pull-right default btn" href="https://BB.com/demo_book/my-new-project/settings#">Invite</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4" id="git_settings">
            <div class="hidden">
                <h3>Git URL</h3>
                <p>
                    To work on your files locally with Git, please add your SSH key to Atlas from your <a href="https://BB.com/settings">account settings</a>.
                </p>
                <form class="form-inline">
                    <input type="text" value="git@git.BB.com:demo_book/my-new-project.git" id="git-url" class="span4" readonly="">
                </form>
            </div>

            <h3>Downloads</h3>
            <p>You can download your entire project as a compressed file as either a zip or tar.gz.</p>
            <div class="btn-group">
                <a class="btn btn-medium" href="https://BB.com/demo_book/my-new-project/archive/master.zip">Zip</a>
                <a class="btn btn-medium" href="https://BB.com/demo_book/my-new-project/archive/master.tar.gz">Tar.gz</a>
            </div>

            <h3>Delete Project</h3>
            <p>Click the button below to delete this project. <strong>Deleting a project is permanent and immediate.</strong></p>



            @*<button class="btn btn-error btn-medium" id="delete-project">Delete</button>*@

            @using (Html.BeginForm("ArchiveProject", "Project"))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-actions no-color">
                    <input type="submit" value="ArchiveProject" class="btn btn-default" />
                </div>
            }


        </div>

    </div>

</div>
